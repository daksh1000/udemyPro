    <section>
      <div class="container emp-profile">
        
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                      <img src="/images/student.png">
                    </div>
                </div>
                <% course.forEach(function(course){ %>
                 
                  <% if(name===course.course_title){%>

                <div class="col-md-6">
                    <div class="profile-head">
                                <h5>
                                  <%= course.course_name %>
                                </h5>
            
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
                <!-- <div class="col-md-2">
                    <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
                </div> -->
            </div>
            <div class="row">
                <div class="col-md-4">
                  <% if(rol==="admin"){ %>
                    <section>
                      <h1>Students</h1>
                      <ul>
                        <% student.forEach(function(stud){ %>
                        <li><%= stud.email %></li>
                       
                        <% }); %>
                      </ul>
                      <div class="email_link">
                        <a class="e_link" href="/pos">Send Email</a>
                        <form action="/delete" method="POST">
                          <input type="hidden" class="form-control" name='course_title' value="<%= course.course_title %>" >
                          <div class="del">
                            <button type="submit" formaction="/delete"  class="btn btn-dark btn-lg button1 j"  >Delete</button>
                          </div>
                          
                        </form>
                        
                      </div>
                      
                      
                    </section>
                  <% } %>
                  <% if(rol==="student"){ %>
                    <div class="row justify-content-center ">
                        <div class="col-lg-6">
                         
                          <form id="student_id" action="/:<%= course.course_title %>" method="POST" class="registerForm">
                            <input type="hidden" class="form-control" name='course_title' value="<%= course.course_title %>" >
                            <input type="hidden" class="form-control" name="start_date"value="<%= course.start_date %>" >
                            <input type="hidden" class="form-control" name="duration"  value="<%= course.duration %>">
                            <%if(co_enrolled){ %>
                              <label>You have already enrolled for this course</label>
                           <% }else{ %>
                            <h4><%= enroll %></h4>
                            <button type="submit" formaction="/:<%= course.course_title %>" method="POST" class="btn btn-dark btn-lg button1 j registerButton "  >Enroll</button>
                            <%}%>
                          </form>
                            
                        </div>
                    </div>
                    <% } %>
                    
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>course_title</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%= course.course_title %> </p>
                                        </div>
                                    </div>
                                    
                                  <div class="row">
                                    <div class="col-md-6">
                                        <label>course_description</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p><%= course.course_description %>  </p>
                                    </div>
                                </div>
                                <div class="row">
                                  <div class="col-md-6">
                                      <label>duration</label>
                                  </div>
                                  <div class="col-md-6">
                                      <p><%= course.duration %>  </p>
                                  </div>
                              </div>
                              <div class="row">
                                <div class="col-md-6">
                                    <label>start_date</label>
                                </div>
                                <div class="col-md-6">
                                    <p><%= course.start_date %>    </p>
                                </div>
                            </div>
                            <div class="row">
                              <div class="col-md-6">
                                  <label>end_date</label>
                              </div>
                              <div class="col-md-6">
                                  <p><%= course.end_date %>  </p>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-6">
                                <label>min</label>
                            </div>
                            <div class="col-md-6">
                                <p><%= course.min %>  </p>
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-md-6">
                              <label>max</label>
                          </div>
                          <div class="col-md-6">
                              <p><%= course.max %>  </p>
                          </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                            <label>Price</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= course.price %>  </p>
                        </div>
                    </div>
                
                                  </div>
                                  <% }%>
    <% }); %>
                    </div>
                </div>
                
            </div>
                  
    </div>
