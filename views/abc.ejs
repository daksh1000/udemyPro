<div class="container">
    <h1 class="heading">Users</h1>
    <hr class="line">
    <div class="row">
        <% for (var i = 0; i < user.length; i++) { %>
            <div class="col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3><%= user[i].name %></h3>
                        <p><%= user[i].email %></p>
                        <p><%= user[i].phone %></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
    <% if (pages > 0) { %>
        <div class="divclass">
        <ul class="pagination text-center" >
            <% if (current == 1) { %>
                <div class="boxes">
                    <li class="disabled" ><a>First</a></li>
                </div>
               
            <% } else { %>
                <div class="boxes">
                    <li><a href="/abc/1" >First</a></li>
                </div>
                
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <div class="boxes">
                        <li class="active" ><a><%= i %></a></li>
                    </div>
                    
                <% } else { %>
                    <div class="boxes">
                        <li><a href="/abc/<%= i %>" ><%= i %></a></li>
                    </div>
                   
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <div class="boxes">
                    <li class="disabled"><a>Last</a></li>
                </div>
                
            <% } else { %>
                <div class="boxes">
                    <li><a href="/abc/<%= pages %>"></a>Last</a></li>
                </div>
                
            <% } %>
        </ul>
    </div>
    <% } %>
    

