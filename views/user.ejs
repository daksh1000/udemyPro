              <div class="row">
               <% if(rol==="admin"){ %>
                  <% courses.forEach(function(course){ %>
                    <div class="pricing-component col-lg-4 col-md-6">
                        <div class="cardab">
                          
                          <div class="card-body">
                            <h3>
                              <%= course.course_title %> 
                            </h3>
                            <p>Duration : <%= course.duration %></p>
                            <p><%= course.start_date %></p>
                            <form action="/course/<%= course.course_title %>">
                              <button type="submit" class="form-control btn btn-dark btn-lg button2 main_button">Details</button>
                            </form>
                            </div>
                            </div>
                            </div>
                <% }); %>
               <% }else{%>
