<section>
  <div class="container emp-profile">
    
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                  <img src="/images/student.png">
                </div>
            </div>
            <% user.forEach(function(use){ %>
            <div class="col-md-6">
                <div class="profile-head">
                            <h5>
                              <%= use.name %>
                            </h5>
        
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
            <!-- <div class="col-md-2">
                <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
            </div> -->
        </div>
        <div class="row">
            <div class="col-md-4">
              <% if(rol==="admin"){ %>
                <div class="sep">
                <h5 style="margin-left: 35px;">Click below to add a new course :</h5>
              <a href="/course/add-course" ><svg xmlns="http://www.w3.org/2000/svg" class="sv" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg></a>
            </div>
