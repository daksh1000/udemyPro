<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Admin</title>

    <!-- css file -->
    

    <!-- bootstrap cdn -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
        integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- <link rel="shortcut icon" href="https://img.icons8.com/fluent/48/000000/pets.png" type="image" /> -->
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />


</head>


<body>
    

    <div class="container-fluid cont-login">
        <div class="row">
            <!-- <div class="col-sm-12 col-md-6 col-lg-5 left-side d-none d-md-block">
                <div class="container">
                    <div class="row login-left">
                        <p class="brand-name">Put a new course</p>
                         <img class="img-fluid" src="images/add-pets.svg">

                    </div>

                </div>
            </div>  -->

            <div class="col-sm-12 col-md-6 col-lg-7 right-side">
                <div>

                    <form action="admin" method="POST">
                        <% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= error.msg %>
                        </div>
                        <% }); %>
                        <% } %>
                        
                        <div class="form-group">
                            <h1>Course Details</h1>
                            <label class="name">Course Name<span class="compulsory">*</span></label>
                            <input type="text" class="form-control" name="course_name" placeholder="Course Name"
                                value="">
                        </div>
                        <div class="form-group">
                            <label class="name">Owner Email<span class="compulsory">*</span></label>
                            <input type="email" class="form-control" name="email" placeholder="Your email"
                                value="">
                        </div>
                        <div class="form-group">
                            <label>Course Title<span class="compulsory">*</span></label>
                            <input type="text" class="form-control" name='course_title' placeholder="Course title"
                                value="">
                        </div>
                        <div class="form-group">
                            <label>Course Description<span class="compulsory">*</span></label>
                            <input type="text" class="form-control" name="course_description" placeholder="Course Description"
                                value="">
                        </div>

                        <div class="form-group">
                            <label>Date<span class="compulsory">*</span></label>
                            <input type="date" class="form-control" name="date" placeholder="Enter date"
                                value="">
                        </div>
                        <div class="form-group">
                            <label>start time<span class="compulsory">*</span></label>
                            <input type="text" class="form-control" name="start_time" placeholder="start_time"
                                value="">
                        </div>
                        <div class="form-group">
                            <label>end time<span class="compulsory">*</span></label>
                            <input type="text" class="form-control" name="end_time" placeholder="end_time"
                                value="">
                        </div>
                        <div class="form-group">
                            <label class="name">Minimum Students<span class="compulsory">*</span></label>
                            <input type="number" class="form-control" name="min" placeholder="Min students"
                                value="">
                        </div>
                        <div class="form-group">
                            <label class="name">Maximum Students<span class="compulsory">*</span></label>
                            <input type="number" class="form-control" name="max" placeholder="Max students"
                                value="">
                        </div>
                       
                        <button type="submit" class="btn btn-outline-success">Add Course</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>

</html>
