                          <h3>
                            <%= stu.course_title %> 
                          </h3>
                        </div>
                        <div class="card-body">
                          
                          <p>Duration : <%= stu.duration %></p>
                          <p><%= stu.start_date %></p>
                          <form action="/course/<%= stu.course_title %>">
                            <button type="submit" class="form-control btn btn-dark btn-lg button2 main_button">Details</button>
