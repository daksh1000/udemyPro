</section>

<div class="container center">
    <div class="userphot1">
        <img src="" class="user-profile" width="170px" height="250px" alt="User Photo Here">
    </div>
</div>
<hr>
<% user.forEach(function(use){ %>
  <div id="Name">
    Name: <%= use.name %>
    <hr>
    <div id="Email">
        Email: <%= use.email %>
    </div>
    <hr>
    <div id="Email">
        Phone No:<%= use.phone %>
    </div>

</div>
<%}) %>


<section id="pricing" class="white-section">
    <h2 class="heading1">Your Courses</h2>
    <p></p>
    <div class="row">
     <% if(rol==="admin"){ %>
        <% courses.forEach(function(course){ %>
          <div class="pricing-component col-lg-4 col-md-6">
              <div class="card">
                <div class="card-header">
                  <img class="student_image" src="/public/images/student.png" alt="Course-profile">
                </div>
                <div class="card-body">
                  <h3>
                    <%= course.course_title %> 
                  </h3>
                  <p>Duration : <%= course.duration %></p>
                  <p><%= course.start_date %></p>
                  <form action="/<%= course.course_title %>">
                    <button type="submit" class="form-control btn btn-dark btn-lg button2">Enroll</button>
                  </form>
                  </div>
                  </div>
                  </div>
      <% }); %>
     <% }else{%>
      <% students.forEach(function(stu){ %>
        <div class="pricing-component col-lg-4 col-md-6">
            <div class="card">
              <div class="card-header">
                <img class="student_image" src="/public/images/student.png" alt="Course-profile">
              </div>
              <div class="card-body">
                <h3>
                  <%= stu.course_title %> 
                </h3>
                <p>Duration : <%= stu.duration %></p>
                <p><%= stu.start_date %></p>
                <form action="/<%= stu.course_title %>">
                  <button type="submit" class="form-control btn btn-dark btn-lg button2">Enroll</button>
                </form>
                </div>
                </div>
                </div>
    <% }); %>
     <% } %>
       
</section>

<%-include("partials/footer")%>